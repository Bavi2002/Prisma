generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String
  company   String?
  bots      Bot[]
  ratings   Rating[]
  createdAt DateTime   @default(now())
}

model Bot {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  botName       String
  description   String
  category      String
  demoVideoLink String
  qrCodeImage   String
  botImage      String
  user          User       @relation(fields: [userId], references: [id])
  userId        String     @db.ObjectId
  ratings       Rating[]
  createdAt     DateTime   @default(now())
}

model Rating {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  value     Int      
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  bot       Bot      @relation(fields: [botId], references: [id])
  botId     String   @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, botId])
}
